  <div id="reqfood_body">
    <h2>Available :</h2>
    <div id="available">
      <% data.forEach((item) => { %>
        <div class="availcard">
          <h4>Quality : <%= item.quality %></h4>
          <p>Available(kg) : <%= item.quantity %></p>
          <p>Offered by <%= item.organisation %></p>
          <p>Contact : <%= item.contact %></p>
          <p>
            <span class="expiryTime" data-item-id="<%= item._id %>" data-expiry="<%= item.expiry %>">
              Expires in <%= item.expiry %> hours
            </span>
          </p>
          <div id="<%= item.ftype %>">
            <div class="vnv"></div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      var expiryTimes = document.querySelectorAll(".expiryTime");

      function updateExpiry() {
        expiryTimes.forEach((expiryTime) => {
            var minutes = parseInt(expiryTime.getAttribute("data-expiry"));

          if (minutes > 0) {
            expiryTime.textContent = `Expires in ${minutes} mins`;
            expiryTime.setAttribute("data-expiry", minutes - 1);
          } else {
            var parentDiv = expiryTime.closest(".availcard");
            parentDiv.style.display = "none";

            var itemId = expiryTime.dataset.itemId;
            <!-- moveItemToBiogas(itemId); -->
          }
        });
      }

      // Call the updateExpiry function initially
      updateExpiry();

      // Call the updateExpiry function every 60 seconds (1000 milliseconds)
      setInterval(updateExpiry, 60*1000);

      // Function to move an item to "biogas" collection
      
    });
  </script>
